#!/bin/bash

if echo `uname -a` | grep -q MINGW64; then
    # https://superuser.com/questions/986807/editor-for-git-bash-on-windows-editor-for-mingw-msysmintty/1361203#1361203
    winpty ~/installed/Neovim/bin/nvim.exe "$@"
elif [ ! -f ~/installed/nvim ]; then
    ~/installed/nvim.appimage "$@"
else
    nvim "$@"
fi
